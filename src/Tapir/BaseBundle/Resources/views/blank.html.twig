<!DOCTYPE html>
{% set tapir_modal = 0 %}
{% set block_pagina_titulo = block('pagina_titulo') %}

<html lang="es">
<head>
<meta charset="utf-8">
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<meta name="description" content="{{ tapir_nombreaplicacion }}">
<meta name="author" content="Ernesto N. Carrea">

<title>{{ tapir_nombreaplicacion }}{% if block_pagina_titulo is not
	empty %} - {{ block_pagina_titulo|raw }}{% endif %}</title> {% image
'@tapir_favicon' %}
<link rel="icon" href="{{ asset_url }}" />
{% endimage %}

<script type="text/javascript"
	src="{{ asset('bundles/tapirbase/js/jquery-2.1.3.min.js') }}"></script>

<link href="{{ asset('bundles/tapirbase/css/fonts.css') }}"
	rel="stylesheet" />
<link href="{{ asset('bundles/tapirbase/css/font-awesome.min.css') }}"
	rel="stylesheet" />
<link href="{{ asset('bundles/tapirbase/css/bootstrap.min.css') }}"
	rel="stylesheet" />
<link href="{{ asset('bundles/tapirbase/css/tapir.css') }}"
	rel="stylesheet" />
<link href="{{ asset('bundles/tapirbase/css/tapir_nav.css') }}"
	rel="stylesheet" />
<link href="{{ asset('bundles/tapirbase/css/tapir_forms.css') }}"
	rel="stylesheet" />
<link href="{{ asset('bundles/tapirbase/css/tapir_tables.css') }}"
	rel="stylesheet" />
</head>

<body>

	{% block pagina_contenido %}{% endblock %}

	<!-- Bootstrap core JavaScript -->
	<script type="text/javascript"
		src="{{ asset('bundles/tapirbase/js/bootstrap.min.js') }}"></script>
	<script type="text/javascript"
		src="{{ asset('bundles/tapirbase/js/jquery.history.js') }}"></script>
	<script type="text/javascript"
		src="{{ asset('bundles/tapirbase/js/jquery.form.min.js') }}"></script>
	<script type="text/javascript"
		src="{{ asset('bundles/tapirbase/js/tinymce/tinymce.min.js') }}"></script>
	<script type="text/javascript"
		src="{{ asset('bundles/tapirbase/js/tapir.js') }}"></script>
	{% if app.environment != 'test' %}
	<script type="text/javascript"
		src="{{ asset('bundles/tapirbase/js/tapir-ajax.js') }}"></script>
	{% endif %}
</body>
</html>