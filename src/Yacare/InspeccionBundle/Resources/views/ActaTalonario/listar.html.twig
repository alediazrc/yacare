{% extends 'TapirBaseBundle:Default:listar.html.twig' %} {% block
pagina_titulo %}Talonarios de actas{% endblock %} {% block
pagina_contenido %} {% include 'TapirBaseBundle::buscar.html.twig' %}

<table class="table table-hover">
	<thead>
		<tr>
			<th></th>
			<th>Tipo</th>
			<th>Numeracion</th>
			<th>En poder de</th>
		</tr>
	</thead>
	<tbody>
		{% for entity in entities %}
		<tr>
			<td><a data-toggle="ajax-link"
				class="btn btn-default btn-xs hidden-print"
				href="{{ path(baseroute ~ '_editar', { 'id': entity.Id }) }}"><i
					class="fa fa-edit"></i> Editar</a></td>
			<td>{{ entity.Tipo }}</td>
			<td>{{ entity.NumeroDesde }} - {{ entity.NumeroHasta }}</td>
			<td>{{ entity.EnPoderDe }}</td>
		</tr>
		{% endfor %}
	</tbody>
</table>

{% include 'TapirBaseBundle::paginar.html.twig' %} {% endblock %} {%
block pagina_acciones %}
<a data-toggle="ajax-link"
	href="{{ path(baseroute ~ '_editar_1', arrastre) }}"
	class="btn btn-primary"><i class="fa fa-plus"></i> Nuevo talonario de
	actas</a>
{% endblock %}
