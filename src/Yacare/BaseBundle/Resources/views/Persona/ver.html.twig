{% extends 'TapirBaseBundle::layout.html.twig' %}

{% block pagina_titulo %}{{ entity }}{% endblock %}

{% block pagina_contenido %}



		<div class="container-fluid grilladatos">
			<div class="row grilladatos-renglon">
				<div class="col-xs-4 text-right text-muted grilladatos-etiqueta">Documento</div>
				<div class="col-xs-8 grilladatos-valor">{{ entity.documentoNumero }}</div>
			</div>
			<div class="row grilladatos-renglon">
				<div class="col-xs-4 text-right text-muted grilladatos-etiqueta">
					<i class="fa fa-home text-muted"></i>&nbsp;Domicilio
				</div>
				<div class="col-xs-8 grilladatos-valor">{{ entity.domicilio }}</div>
			</div>
			<div class="row grilladatos-renglon">
				<div class="col-xs-4 text-right text-muted grilladatos-etiqueta">
					<i class="fa fa-phone text-muted"></i>&nbsp;Tel√©fono
				</div>
				<div class="col-xs-8 grilladatos-valor">
                    {{ entity.TelefonoNumero }}
                    {% if entity.TelefonoNumero and entity.TelefonoVerificacionNivel > 0 %}<small class="text-muted">({{ entity.TelefonoVerificacionNivel|yacare_verificacionnivel }})</small>{% endif %}
                    <a href="{{ path(baseroute ~ '_modificardato', arrastre|merge({ 'id': entity.id, 'campo': 'TelefonoNumero' })) }}" data-toggle="modal" class="btn btn-link btn-xs"><i class="fa fa-edit"></i> 
                    {% if entity.TelefonoNumero %}Cambiar{% else %}Agregar{% endif %}</a>
                </div>
			</div>
			<div class="row grilladatos-renglon">
				<div class="col-xs-4 text-right text-muted grilladatos-etiqueta">
					<i class="fa fa-envelope-o text-muted"></i>&nbsp;E-mail
				</div>
				<div class="col-xs-8 grilladatos-valor">
    				{{ entity.Email }}
    				<a href="{{ path(baseroute ~ '_modificardato', arrastre|merge({ 'id': entity.id, 'campo': 'Email' })) }}" data-toggle="modal" class="btn btn-link btn-xs"><i class="fa fa-edit"></i> Agregar</a>
				</div>
			</div>

            <div class="row grilladatos-renglon">
                <div class="col-xs-4 text-right text-muted"></div>
        		<div class="col-xs-8 grilladatos-valor text-muted">
        		     {% for Grupo in entity.Grupos %}<span class="label label-info">{{ Grupo }}</span> {% endfor %}
        		     {% if entity.PuedeAcceder %}
        		          <span class="label label-success">{{ entity.Username }}</span> {% for Rol in entity.UsuarioRoles %}<span class="label label-warning">{{ Rol }}</span> {% endfor %}
        		     {% endif %}
        		</div>
            </div>
			<div class="row grilladatos-renglon">
				<div class="col-xs-4 text-right text-muted grilladatos-etiqueta">Nacionalidad</div>
				<div class="col-xs-8 grilladatos-valor">{{ entity.Pais }}</div>
			</div>
			<div class="row grilladatos-renglon">
				<div class="col-xs-4 text-right text-muted grilladatos-etiqueta">Fecha de nacimiento</div>
				<div class="col-xs-8 grilladatos-valor">{{ entity.FechaNacimiento|tapir_fecha('medium', 'none') }}</div>
			</div>
			<div class="row grilladatos-renglon">
				<div class="col-xs-4 text-right text-muted grilladatos-etiqueta">Genero</div>
				<div class="col-xs-8 grilladatos-valor">{{ entity.GeneroNombre }}</div>
			</div>

		</div>
		
{% endblock pagina_contenido %}

{% block pagina_acciones %}
    <span adata-toggle="ajax-link" onclick="return tapirAtras();" class="btn btn-link"><i class="fa fa-reply"></i> Volver</span>
{% endblock pagina_acciones %}

{% block pagina_acciones2 %}
	{% if is_expr_granted("hasAnyRole('ROLE_IDDQD')") %}
    <a href="{{ path('yacare_base_persona_editar', arrastre|merge({ 'id': entity.id })) }}" class="btn btn-default"><i class="fa fa-edit"></i> Editar</a>
	<a href="{{ path('usuario_editarperfil', arrastre|merge({ 'id': entity.id })) }}" class="btn btn-default"><i class="fa fa-user"></i> Perfil</a>
	{% endif %}
{% endblock pagina_acciones2 %}
