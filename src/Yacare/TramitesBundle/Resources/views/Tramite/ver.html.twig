	onclick="$('[data-toggle=requisitos_ocultables]').toggle(); return false;"><i
	class="fa fa-adjust"></i> Mostrar u ocultar otros requisitos</a>
{% endblock %} {% block pagina_acciones3 %} {{ parent() }}
