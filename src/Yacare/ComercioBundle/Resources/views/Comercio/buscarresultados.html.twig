{% block pagina_contenido %} &nbsp;
<table class="table table-condensed table-hoverselect">
	<tbody>
		{% for entity in entities %}
		<tr
			onclick="seleccionarItem('{{ entity.id }}', '{{ entity.Nombre|escape('js') }}'); return false;">
			<td><i class="fa fa-angle-right"></i></td>
			<td><strong style="white-space: nowrap;">{{ entity.Nombre }}</strong><br />
				<span class="text-muted"><small>de {{ entity.Titular }}</small></span></td>
			<td><small class="text-muted">{{ entity.Local }}</small></td>
			<td><small class="text-muted">{{ entity.ActividadPrincipal }}</small></td>
		</tr>
		{% endfor %}
	</tbody>
</table>

{% if not entities %}
<div class="alert alert-warning">
	<p>
		<i class="fa fa-warning fa-2x"></i> No se encontraron resultados.
	</p>
</div>
{% endif %} {% endblock %}
