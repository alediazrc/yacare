{% extends 'TapirBaseBundle:Default:listar.html.twig' %}

{% block pagina_titulo %}Locales comerciales{% endblock %}

{% block pagina_contenido %}
<table class="table table-hoverselect">
    <thead>
        <tr>
            <th>Domicilio</th>
            <th class="hidden-xs">Tipo</th>
            <th>Sup.</th>
            <th class="hidden-sm hidden-xs">Titular</th>
        </tr>
    </thead>
    <tbody>
    {% for entity in entities %}
        <tr data-toggle="ajax-link" href="{{ path(baseroute ~ '_editar', { 'id': entity.Id }) }}">
            <td>{{ entity.Partida.Domicilio }}</td>
            <td class="hidden-xs">{{ entity.Tipo }}</td>
            <td>{{ entity.Superficie }} mÂ²</td>
            <td class="hidden-sm hidden-xs">{{ entity.Partida.Titular }}</td>
        </tr>
    {% endfor %}
    </tbody>
</table>
{% endblock %}

{% block pagina_paginar %}{% include 'TapirBaseBundle::paginar.html.twig' %}{% endblock pagina_paginar %}
{% block pagina_buscar %}{% include 'TapirBaseBundle::buscar.html.twig' %}{% endblock pagina_buscar %}

