        });
    }
    
    function buscarCalleAltura(a, b) {
        $('#resultadosbuscar').html('<p><i class="fa fa-spinner fa-spin"></i> Buscando...</p>');
        
        seccion = a;

        var url = '{{ path(baseroute ~ '_buscarresultados') }}?filtro_calle=' + a+ '&filtro_calle_altura=' + b;
